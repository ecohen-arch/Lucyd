        {
          "type": "text",
          "id": "points_required",
          "label": "Points range",
          "info": "e.g. 0 – 499 pts",
          "default": "0 – 499 pts"
        },
        {
          "type": "text",
          "id": "multiplier",
          "label": "Points multiplier",
          "info": "e.g. 1x Points",
          "default": "1x Points"
        },
        {
          "type": "richtext",
          "id": "perks",
          "label": "Perks list",
          "default": "<ul><li>Earn points on purchases</li><li>Birthday bonus</li><li>Member-only offers</li></ul>"
        },
        {
          "type": "checkbox",
          "id": "is_featured",
          "label": "Featured tier",
          "info": "Highlights this tier with an accent border and badge",
          "default": false
        }
      ]
    }
  ],
  "presets": [
